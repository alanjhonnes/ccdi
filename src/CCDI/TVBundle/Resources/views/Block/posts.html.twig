{% extends sonata_block.templates.block_base %}

{% block block %}
{% if posts|length > 0 %}
    <h2>{{ block.name }}</h2>
    <ul>
    {% for post in posts %}
        <li>
            <h3>{{ post.title }}</h3>
            <p>{{ post.content|raw }}</p>
        </li>
    {% endfor %}
    </ul>
{% endif %}
{% endblock %}