{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="anniversary-block">
        {% if employees|length > 0 %}
            <h2>Aniversariantes de {{ "now"|date('d/m') }}:</h2>
            <div class="anniversary">
                <ul>
                    {% for employee in employees %}
                        <li>
                            <h3>{{ employee.name }}</h3>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <h2>Não há aniversariantes em {{ "now"|date('d/m') }}</h2>
        {% endif %}
    </div>
{% endblock %}